{
  "enabled": true,
  "name": "Commit Message Helper",
  "description": "Suggests meaningful commit messages based on changes",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "askAgent",
    "prompt": "Review the current git diff and suggest a clear, descriptive commit message following conventional commit format (feat:, fix:, docs:, refactor:, etc.). Include a brief description of what changed and why."
  }
}
